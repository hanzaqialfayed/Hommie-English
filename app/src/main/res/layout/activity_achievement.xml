<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <!-- Layout 2 -->
    <LinearLayout
        android:id="@+id/achievement_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_color_disabled"
        android:layout_weight="1">
        <TextView
            android:id="@+id/achievementTv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:fontFamily="@font/architects_daughter"
            android:textColor="#80000000"
            android:textSize="30sp">
        </TextView>
        <TextView
            android:id="@+id/achievementTv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FD8A8A"
            android:text="YOUR GRADE IS"
            android:textSize="50sp">
        </TextView>
        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/arrow_bottom"
            android:layout_height="80dp">
        </ImageView>

    </LinearLayout>

    <!-- Layout 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/imageViewGif"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>